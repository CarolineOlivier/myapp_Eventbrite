<!-- index.html.erb (affiche tous les événements) : -->

<!-- Début de la page d'accueil affichant la liste des événements -->

<%= image_tag "android-chrome-192x192.png", alt: "Logo", class: "homepage-logo" %>
<%= stylesheet_link_tag "events", "data-turbo-track": "reload" %>


<h2 class="title">Événements à venir</h2>

<div class="events-container">
  <!-- Section pour les événements à venir, affichés dans des cartes -->
  <div class="cards-grid">
    <% @upcoming_events.each do |event| %>
      <div class="card">
        <h3 class="card-title"><%= link_to event.title, event_path(event) %></h3>
        <p>Date : <%= event.start_date.strftime("%d %b %Y") %></p>
        <p>Lieu : <%= event.location %></p>
        <p>Description : <%= truncate(event.description, length: 100) %></p>
      </div>
    <% end %>
  </div>

  <!-- Section pour les événements passés, affichés sous forme de liste avec effet de défilement -->
  <div class="card events-passed">
    <h3>Événements passés</h3>
    <div class="events-passed-list">
      <% @past_events.each do |event| %>
        <p><%= link_to event.title, event_path(event) %> - <%= event.start_date.strftime("%d %b %Y") %></p>
      <% end %>
    </div>
  </div>
</div>
