<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <h2 class="h3 mb-3 font-weight-normal text-center">Inscription</h2>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
        <%= devise_error_messages! %>

        <!-- Champ pour le prénom -->
        <div class="form-group">
          <%= f.label :first_name, "Prénom" %><br />
          <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
        </div>

        <!-- Champ pour le nom -->
        <div class="form-group">
          <%= f.label :last_name, "Nom" %><br />
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <!-- Champ pour l'email -->
        <div class="form-group">
          <%= f.label :email, "Adresse email" %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <!-- Champ pour le mot de passe -->
        <div class="form-group">
          <%= f.label :password, "Mot de passe" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caractères minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <!-- Champ pour la confirmation du mot de passe -->
        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation du mot de passe" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <!-- Bouton de soumission -->
        <div class="actions mt-5">
          <%= f.submit "S'inscrire", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
